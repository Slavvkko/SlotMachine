<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- background -->
            <solid android:color="@color/colorButtonBackgroundPressed" />
            <!-- border -->
            <stroke android:width="5dp" android:color="@color/colorButtonBorderPressed" />
            <!-- corner roundness -->
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <!-- background -->
            <solid android:color="@color/colorButtonBackground" />
            <!-- border -->
            <stroke android:width="5dp" android:color="@color/colorButtonBorder" />
            <!-- corner roundness -->
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>